<ServerLoad>
	<!-- Configuration of DB connection. Allow multiple destination DBs 
	     attributes:
	     DSN - the ODBC DSN string to the database
	     User - the user id to login the database
	     Password - the password to access the datatbase
	     instanceStamp - '1' if the schema of table has appended with a datatime stamp 'last_updated'. default '0'
	-->
	<OteDatabase DSN="ServerLoad" User="sa" Password="" instanceStamp="0" />

	<!-- Configuration of the load input files that needs to watch
	     attributes:
	     ScanInterval - the internal of scan in second, acceptable [60, 3600*24]. The scan interval should be no longer than the instance timeout
	                    to avoid accidential "unavailable"
	-->
	<WatchList ScanInterval="100">
		<!-- Configuration of a load input file for Axiom's svrlist.xml style
		     attributes:
		     Path - the full path name of the input file
		     StartCMGroupID - the start CMGroup ID that needs update the database. required for Axiom style
		     EndCMGroupID - the end CMGroup ID that needs update the database. Must no smaller than StartCMGroupID and is required for Axiom style
		     Port - the default port number for Axim style since svrlist.xml doesn't give the information
		     SessionProtocolType - the default protocol type if not specified in the input file. acceptable 'DSMCC' or 'RTSP'
		     HostName - the default hostname if not specified in the input file.
		     the internal of scan in second, acceptable [60, 3600*24]
		-->
		<File Path="c:\AxiomFormat.xml" StartCMGroupID="10" EndCMGroupID="20" Port="554"/>
		
		<!-- Configuration of a load input file for TianShan style
		     attributes:
		     Path - the full path name of the input file. The file is generated by the sentry service on the machine that hosts RTSPProxy service. 
		            the file location is specified in syntax_rtsp.xml of the sentry service. When there is multiple RTSPProxy service, you need
		            enumerate them with <File> element for each
		-->
		<File Path="\\10.50.12.4\c$\serverload.snapshot.xml"/>
	</WatchList>
</ServerLoad>

